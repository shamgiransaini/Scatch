<%- include('./partials/header') %>

<% if(success.length>0){ %>
<div id="success-message" class="absolute top-5 left-1/2 z-20 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= success %>
  </span>
</div>
<% } %>
<% if(error.length>0){ %>
<div id="error-message" class="absolute top-5 left-1/2 z-20 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= error %>
  </span>
</div>
<% } %>
<div class="w-full h-screen flex items-start px-20 py-20">
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex flex-col">
      <a class="block w-fit mb-2" href="">All Products</a>
      <a class="block w-fit mb-2" href="">Create new product</a>
    </div>
  </div>
  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <a class="text-red-500" href="">Delete all</a>
    <div class="flex items-start gap-5 flex-wrap">
      <% admin.products.forEach(function(product){ %>
      <div class="min-w-60 w-3/12 rounded-lg overflow-hidden">
        <div class="w-full h-52  p-2 flex items-center justify-center bg-[<%= product.bgcolor %>]">
          <img class="h-full w-full object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
        </div>
        <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
          <div>
            <h3>
              <%= product.name %>
            </h3>
            <h4>â‚¹ <%= product.price %>
            </h4>
          </div>
          <a class="w-7 h-7 ml-auto mr-2 flex items-center justify-center rounded-full bg-white text-[<%= product.panelcolor %>]" href="/product/edit/<%= product._id %>">
            <i class="ri-edit-2-fill"></i>
          </a>
          <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-red-500" href="/product/delete/<%= product._id %>">
            <i class="ri-delete-bin-6-line"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    document.getElementById('success-message').style.display = 'none';
  }, 3000);
  setTimeout(() => {
    document.getElementById('error-message').style.display = 'none';
  }, 3000);
</script>
<%- include('./partials/footer') %>